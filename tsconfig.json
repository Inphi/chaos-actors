{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "sourceMap": true,
        "esModuleInterop": true,
        "composite": true,
        "resolveJsonModule": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "./dist"
    },
    "include": [
        "./lib/**/*.ts",
        "./package.json",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
